<h2>Update Ski Area</h2>

<div id="create_form_wrapper">
  <%= form_for @ski_area do |f| %>

    <%= f.label :ski_area_name, "Ski Area Name", class: "form_label" %>
    <%= f.text_field :ski_area_name, class: "field_style", size: "50" %>

    <%= f.label :country, "Country", class: "form_label" %>
    <%= f.text_field :country, class: "field_style", size: "30" %>

    <%= f.label :state, "State/Province", class: "form_label" %>
    <%= f.text_field :state, class: "field_style", size: "20" %>

    <%= f.label :skiable_acres, "Skiable Acres", class: "form_label" %>
    <%= f.text_field :skiable_acres, class: "field_style", size: "13" %>

    <%= f.label :visited, "Visited Resort?", class: "form_label" %>
    <div class="field_style">
      <%= f.select(:visited, options_for_select([['No', 'false'], ['Yes', 'true']], 'false')) %>
    </div>

    <%= f.label :logo_url, "Logo URL", class: "form_label" %>
    <%= f.text_field :logo_url, class: "field_style", size: "65" %>

    <%= f.submit "Update Ski Area", class: "submit_button" %>
  <% end %>
</div>
